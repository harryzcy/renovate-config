{
  "extends": [
    "config:best-practices",
    ":pinDependencies",
    ":disableDependencyDashboard",
    ":automergeMinor",
    "helpers:pinGitHubActionDigestsToSemver",
    ":disableRateLimiting"
  ],
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "labels": [
      "dependencies",
      "skip-changelog"
    ]
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "digest",
      "automerge": true
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "automerge": false
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths",
    "npmDedupe"
  ]
}
